<?xml version="1.0" encoding="utf-8"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      throwExceptions="true">
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>
  <targets>
    <target xsi:type="File" name="log_debug" fileName="${basedir}\logs\${logger}_DEBUG.txt" />
    <target xsi:type="File" name="log_error" fileName="${basedir}\logs\${logger}_ERROR.txt" />
    <target name="ConsoleLog" xsi:type="Console" layout="${longdate} | ${callsite} | ${level} | ${message}"/>
    <target xsi:type="Null" name="blackhole" />
  </targets>

  <rules>
    <!-- Skip FW logs -->
    <logger name="Microsoft.*" minlevel="Trace" writeTo="blackhole" final="true" />
    <!-- <logger name="*" writeTo="ConsoleLog" /> -->
    <logger name="*" minlevel="Debug" maxlevel="Warn" writeTo="log_debug" />
    <logger name="*" minlevel="Error" writeTo="log_error" />
  </rules>
</nlog>